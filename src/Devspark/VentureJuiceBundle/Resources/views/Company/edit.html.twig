{% extends '::base.html.twig' %}

{% block body -%}
    {% include 'DevsparkVentureJuiceBundle:Default:nav.html.twig' with {'nav': 'companies'} %}
    <h1>Company edit</h1>
    {{ tinymce_init() }}

    {{ form_start(edit_form) }}
        <div class="row-fluid">
            {{ form_row(edit_form.active) }}
        </div>
        <div class="row-fluid">
            {{ form_row(edit_form.name) }}
        </div>
        <div class="row-fluid">
            {{ form_row(edit_form.displayOrder) }}
        </div>
        <div class="row-fluid">
            {{ form_row(edit_form.link) }}
        </div>
        <div class="row-fluid">
            {{ form_row(edit_form.title) }}
        </div>
        <div class="row-fluid">
            {{ form_row(edit_form.text) }}
        </div>
        <div class="row-fluid">
            {{ form_row(edit_form.email) }}
        </div>
        <div class="row-fluid">
            {{ form_label(edit_form.file) }}
            {% if entity.logo is not null %}
            <div class="row-fluid">
                <img src="{{ entity.getWebPath | apply_filter('widen') }}" />
            </div>
            {% endif %}
            {{ form_errors(edit_form.file) }}
            {{ form_widget(edit_form.file) }}
        </div>
        <div class="row-fluid">
            {{ form_row(edit_form.logo) }}
        </div>

        <hr/>

        <div class="row-fluid">
            {{ form_rest(edit_form) }}
        </div>
        {{ form_errors(edit_form) }}
    {{ form_end(edit_form) }}
    
        <ul class="record_actions">
    <li>
        <a href="{{ path('company') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>

{% endblock %}

