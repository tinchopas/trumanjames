{% extends '::base.html.twig' %}

{% block body -%}
    {% include 'DevsparkVentureJuiceBundle:Default:nav.html.twig' with {'nav': 'emails'} %}
    <h1>EmailMessage edit</h1>
    {{ tinymce_init() }}

    {#{{ form(edit_form) }}#}
    {{ form_start(edit_form) }}
        <div class="row-fluid">
            {{ form_row(edit_form.subject) }}
        </div>
        <div class="row-fluid">
            <div class="span6">
                {{ form_row(edit_form.body) }}
                <div class="well well-sm">
                    Company Name: {{ '{{company.name}}' |e('html') }}<br/>
                    Client Name: {{ '{{client.name}}' |e('html') }}<br/>
                    Client Company: {{ '{{client.company}}' |e('html') }}<br/>
                    Client Website: {{ '{{client.website}}' |e('html') }}<br/>
                    Client Email: {{ '{{client.email}}' |e('html') }}<br/>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            {{ form_row(edit_form.company) }}
        </div>

    {{ form_end(edit_form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('emailmessage') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
