{% extends '::base.html.twig' %}

{% block body -%}

    {% include 'DevsparkVentureJuiceBundle:Default:nav.html.twig' with {'nav': 'emails'} %}
    <h1>EmailMessage list</h1>

    <table class="records_list" table-striped" cellpadding="10">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Body</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('emailmessage_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.subject }}</td>
                <td>{{ entity.body | raw }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('emailmessage_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('emailmessage_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('emailmessage_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
